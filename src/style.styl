body,
html
  margin: 0
  position: relative
  height: 100%

body
  background: #fafafa

.placeholder
  position: absolute
  top: 50%
  left: 0
  width: 100%
  text-align: center
  font-size: 20px
  color: #666
  font-family: Arial, Microsoft YaHei, Microsoft Sans Serif, Microsoft SanSerf

  &::after
    content: "_"
    animation: blk 1s steps(1) infinite

  @keyframes blk
    from
      opacity: 0

    50%
      opacity: 1

    to
      opacity: 0
